# GraphQL representation of the AppUserEntity
type AppUser {
    id: ID!
    username: String!
    email: String!
    firstName: String!
    lastName: String!
    createdAt: String!
    updatedAt: String!
    ownedShoppingLists: [ShoppingList]
    collaboratorShoppingLists: [ShoppingList]
}

type ShoppingList {
    id: ID!
    name: String!
    owner: AppUser!
    collaborator: AppUser
    createdAt: String!
    updatedAt: String!
    items: [Item]
}

type Item {
    id: ID!
    name: String!
    quantity: Float
    unit: Unit,
    isCompleted: Boolean
    shoppingList: ShoppingList!
}

enum Unit {
    ST
    CL
    DL
    L
    G
    HG
    KG
}
